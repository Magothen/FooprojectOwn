pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git 'http://github.com/USERNAME/REPO.git'
            }
        }
        stage('Build') {
            steps {
                bat "mvn compile"
            }
        }
        stage('Test') {
            steps {
                bat "mvn test"
            }
            post {
                always {
                    junit '**/TEST*.xml'
                }
            }
        }
    }
}
